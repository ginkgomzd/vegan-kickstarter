{{#if enabled}}
  <div {{action "clickToDismiss"}} class="gsl-modal-fog">
    <div class="gsl-modal-frame {{type}}">
      <div class="greenBar">
        <div class="triangle"></div>
      </div>
      <div class="gsl-modal-title darkGrayBar">
        {{title}}
      </div>
      <div class="clear"></div>
      <div class="gsl-modal-body">
        {{message}}
      </div>
      {{#if showClose}}
        <div {{action 'hideModal'}} class="gsl-modal-close">{{ts "close" "Close"}}</div>
      {{/if}}
    </div>
  </div>
{{/if}}