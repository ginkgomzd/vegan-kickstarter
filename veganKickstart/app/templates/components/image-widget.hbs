{{#if showDecoration}}
<!--// Green bar //-->
<div class="greenBar">
  <!--// Blue Triangle //-->
  <div class="triangle"></div>
</div>
{{/if}}
<!--//Include Images//-->
{{#if images}}
  {{#slick-slider autoplay=false arrows=false dots=showDots mobileFirst=true adaptiveHeight=true infinite=false swipeToSlide=true}}
    {{#each images as |image|}}
      <div class="box carousel-slide"><img src="data:{{image.mimeType}};base64,{{image.imageData}}" /></div>
    {{/each}}
  {{/slick-slider}}
{{else}}
  {{#if image.imageData}}
    <img src="data:{{image.mimeType}};base64,{{image.imageData}}" />
  {{else}}
    <img src="assets/images/default.png" />
  {{/if}}
{{/if}}

<div class="clear"></div>
