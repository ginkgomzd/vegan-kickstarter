{{#if showDecoration}}
<!--// Green bar //-->
<div class="greenBar">
  <!--// Blue Triangle //-->
  <div class="triangle"></div>
</div>
{{/if}}
<!--//Include Images//-->
{{#if images}}
  {{#slick-slider autoplay=false arrows=false dots=showDots mobileFirst=true adaptiveHeight=true infinite=false swipeToSlide=true}}
    {{#each images as |image|}}
      <div class="box carousel-slide">
        {{#if image.remotePath}}
          {{cached-image image=image}}
        {{else}}
          <img src="assets/images/default.png" />
        {{/if}}
      </div>
    {{/each}}
  {{/slick-slider}}
{{else}}
  {{#if image.remotePath}}
    {{cached-image image=image}}
  {{else}}
    <img src="assets/images/default.png" />
  {{/if}}
{{/if}}

<div class="clear"></div>
