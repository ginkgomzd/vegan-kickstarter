<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ginkgostreet.vka" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VeganKickstart</name>
    <description>
        A 21 Day Vegan Kickstarter! Spanish
    </description>
    <author email="dev@ginkgostreet.com" href="http://www.ginkgostreet.com">
        Ginkgo Street Labs
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-socialsharing" source="npm" version="4.3.81" />

    <!-- see: https://www.npmjs.com/package/cordova-plugin-facebook4 -->
    <plugin name="cordova-plugin-facebook4" source="npm" spec="1.6.3" >
        <param name="APP_ID" value="1661929367400739" />
        <param name="APP_NAME" value="21DayVeganKickstart" />
    </plugin>
    <hook type="before_prepare" src="scripts/build_ember_app.sh" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
